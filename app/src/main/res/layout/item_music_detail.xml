<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivMusicHead"
        android:layout_margin="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:text="歌名"
        android:textSize="@dimen/text_size_normal"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/ivMusicHead"
        app:layout_constraintTop_toTopOf="@+id/ivMusicHead"
        android:id="@+id/tvMusicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvMusicAuthor"
        android:text="这个是作者"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="@+id/tvMusicName"
        app:layout_constraintLeft_toRightOf="@+id/tvMusicName"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</androidx.constraintlayout.widget.ConstraintLayout>